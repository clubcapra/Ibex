<library path="lib/libcapra_filters">
  <class name="capra_filters/blur" type="capra_filters::BlurFilter" base_class_type="nodelet::Nodelet">
    <description>
      Simple kernel blur filter
    </description>
  </class>

  <class name="capra_filters/rectangle" type="capra_filters::Rectangle" base_class_type="nodelet::Nodelet">
    <description>
      Render a black rectangle
    </description>
  </class>

  <class name="capra_filters/perspective_calibration" type="capra_filters::PerspectiveCalibration" base_class_type="nodelet::Nodelet">
    <description>
      Perspective calibration
    </description>
  </class>


  <class name="capra_filters/section_filter" type="capra_filters::SectionFilter" base_class_type="nodelet::Nodelet">
    <description>
      Section filter to detect white lines on grass
    </description>
  </class>

  <class name="capra_filters/resize" type="capra_filters::Resize" base_class_type="nodelet::Nodelet">
    <description>
      Resize an image
    </description>
  </class>

  <class name="capra_filters/bgr2rgb" type="capra_filters::Bgr2Rgb" base_class_type="nodelet::Nodelet">
    <description>
      Converts colors from RGB to BGR
    </description>
  </class>

  <class name="capra_filters/image_to_pointcloud" type="capra_filters::ImageToPointcloud" base_class_type="nodelet::Nodelet">
    <description>
      Converts a image into gray scale pointcloud
    </description>
  </class>

  <class name="capra_filters/threshold" type="capra_filters::Threshold" base_class_type="nodelet::Nodelet">
    <description>
      HSV threshold filter
    </description>
  </class>

</library>
