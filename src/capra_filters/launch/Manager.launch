<launch>
  <arg name="nodelet_manager_name" default="capra_filters_nodelet_manager" />
  <arg name="gui" default="false" />

  <node ns="capra_filters" pkg="capra_filters" name="manager" type="capra_filters_manager.py">
    <param name="nodelet_manager_name" value="$(arg nodelet_manager_name)" />
  </node>

  <node pkg="nodelet" name="$(arg nodelet_manager_name)" type="nodelet" args="manager" output="screen" />

  <group if="$(arg gui)">
    <node pkg="rqt_gui" name="capra_filters_rqt" type="rqt_gui" />
  </group>
</launch>
