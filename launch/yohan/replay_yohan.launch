<launch>


    <node pkg="capra_imu" type="imu_wrapper.py" name="imu_wrapper" output="screen" clear_params="true" />

    <node pkg="robot_localization" type="navsat_transform_node" name="navsat_transform_node" clear_params="true" output="screen" >
        <param name="magnetic_declination_radians" value="0.0"/>
        <param name="roll_offset" value="0.0"/>
        <param name="pitch_offset" value="0.0"/>
        <param name="yaw_offset" value="0.0"/>
        <param name="zero_altitude" value="true"/>
        <param name="broadcast_utm_transform" value="false" />
        <param name="use_odometry_yaw" value="false" />
        <remap from="/odometry/filtered" to="/odom" />

    </node>

    <include file="$(find capra_2dnav)/launch/kalman.launch" />

    <node pkg="rviz" type="rviz" name="rviz" args="-d $(find capra_gazebo)/../../rviz_cfg/kalman.rviz"/>
    <node pkg="capra_imu" type="imu_display.py" name="imu_display" />
</launch>