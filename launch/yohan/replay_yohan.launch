<launch>

    <include file="$(find capra_2dnav)/launch/capra_configuration.launch" >
      <arg name="lidar" default="0" />
      <arg name="imu" default="1" />
      <arg name="motors" default="0" />
      <arg name="gps" default="0" />
      <arg name="camera" default="0" />
    </include>

    <node pkg="robot_localization" type="navsat_transform_node" name="navsat_transform_node" clear_params="true" output="screen" >
        <param name="magnetic_declination_radians" value="0.0"/>
        <param name="roll_offset" value="0.0"/>
        <param name="pitch_offset" value="0.0"/>
        <param name="yaw_offset" value="-1.22"/>
        <param name="zero_altitude" value="true"/>
        <param name="broadcast_utm_transform" value="false" />
        <param name="use_odometry_yaw" value="false" />
        <remap from="/odometry/filtered" to="/odom" />
        <remap from="/imu/data" to="/imu/zero" />
    </node>

    <!--<include file="$(find capra_2dnav)/launch/kalman.launch" />-->

    <node pkg="rviz" type="rviz" name="rviz" args="-d $(find capra_gazebo)/../../rviz_cfg/kalman.rviz"/>
    <node pkg="capra_imu" type="imu_display.py" name="imu_display" />

    <node pkg="rosbag" type="play" name="rosbag" args="$(env IBEX_HOME)/north.bag" >
        <remap from="/imu/raw" to="/imu/null" />
    </node>

    <include file="$(find capra_2dnav)/launch/kalman.launch" />
<!--
  <arg name="robot_description" value="$(find capra_2dnav)/models/capra6/capra6.urdf" />
  <node pkg="tf" type="static_transform_publisher" name="footprint_broadcaster" args="0 0 0 0 0 0 base_footprint base_link 50" />
  <rosparam command="load" param="robot_description" file="$(arg robot_description)" />
  <node pkg="robot_state_publisher" type="robot_state_publisher" name="capra6_state_publisher" />
-->
</launch>