<launch>

    <arg name="magnetic_declination_radians" value="-0.25" />

    <!-- GAZEBO
    <include file="$(find capra_gazebo)/launch/Gazebo.launch">
        <arg name="gui" value="true" />
        <arg name="world" value="$(find capra_gazebo)/worlds/grass_lanes.world" />
    </include> -->

    <!-- MOVING
    <group>
      <remap from="map" to="projected_map" />
      <include file="$(find capra_2dnav)/launch/move_base.launch">
        <arg name="context" value="indoors" />
      </include>
    </group>-->

    <node pkg="rosbag" type="play" name="rosbag" output="screen" args="-l /home/yohan/Ibex/bags/kalman/rect2.bag" >
        <remap from="/odom" to="/odometry/motors" />
    </node>
    <node pkg="vectornav" type="imu_covariance.py" name="imu_covariance" output="screen">
        <param name="magnetic_declination_radians" value="$(arg magnetic_declination_radians)" />
        <remap from="vectornav/imu/orient" to="/imu/data" />
        <remap from="vectornav/imu/orient_covariance" to="/imu/data_covariance" />
    </node>

    <!--a
     <node pkg="capra_ai" name="simple_move" type="simple_move.py" />

    <include file="$(find capra_teleop)/launch/Teleop.launch" />-->

    <!-- MAPPING
    <node pkg="capra_lidar" name="scan_to_cloud_hf_node" type="scan_to_cloud_hf_node" >
        <remap from="cloud" to="cloud_in" />
    </node>

    <include file="$(find capra_2dnav)/launch/octomap.launch" />-->

    <!--RVIZ  -->

    <node pkg="rviz" type="rviz" name="rviz" args="-d $(find capra_gazebo)/../../rviz_cfg/kalman.rviz"/>

    <!-- Position

    <include file="$(find capra_gps)/launch/gps_localization.launch" />-->
    <include file="$(find capra_2dnav)/launch/kalman.launch" />

    <node pkg="robot_localization" type="navsat_transform_node" name="navsat_transform_node" respawn="true">
        <param name="magnetic_declination_radians" value="$(arg magnetic_declination_radians)"/>
        <param name="roll_offset" value="0"/>
        <param name="pitch_offset" value="0"/>
        <param name="yaw_offset" value="0"/>
        <param name="zero_altitude" value="false"/>
        <param name="broadcast_utm_transform" value="false" />
        <remap from="/odometry/filtered" to="/odometry/motors" />
        <remap from="/imu/data" to="/imu/data" />
    </node>


</launch>
